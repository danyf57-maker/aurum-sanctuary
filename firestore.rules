rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ---------------------------------------------------------
    // Users Collection (Root)
    // Architecture: Admin-Blind
    // ---------------------------------------------------------
    
    match /users/{userId} {
      // READ: Owner only
      // WRITE: DENY ALL (Client cannot modify root user doc, handled by Cloud Functions)
      allow read: if isOwner(userId);
      allow write: if false; 

      // -------------------------------------------------------
      // Settings Subcollection
      // -------------------------------------------------------
      
      // Legal Settings (Terms Acceptance) - WRITABLE by Client
      match /settings/legal {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId)
          // Validate structure
          && request.resource.data.keys().hasAll(['termsAccepted', 'termsAcceptedAt', 'updatedAt'])
          && request.resource.data.termsAccepted is bool;
      }

      // General Settings - WRITABLE by Client
      match /settings/preferences {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }

      // -------------------------------------------------------
      // Entries Subcollection (Journal)
      // -------------------------------------------------------
      match /entries/{entryId} {
        allow read: if isOwner(userId);
        // Create/Update allowed if fields are encrypted (not validated here strictly, but enforced by client app logic)
        allow write: if isOwner(userId); 
      }

      // -------------------------------------------------------
      // Insights Subcollection (Generated by Server)
      // -------------------------------------------------------
      match /insights/{insightId} {
        allow read: if isOwner(userId);
        allow write: if false; // Generated by Server only
      }

      // -------------------------------------------------------
      // Derived Memory (Stats)
      // -------------------------------------------------------
      match /derivedMemory/{docId} {
        allow read: if isOwner(userId);
        allow write: if false; // Updated by Server only
      }
    }
  }
}
